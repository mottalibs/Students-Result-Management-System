# Server Environment Variables
# Copy this file to .env and update the values

# Server Port
PORT=5000

# MongoDB Connection
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/student_result

# Option 2: MongoDB Atlas (uncomment and fill in)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/student_result?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_2024
JWT_EXPIRY=24h

# Environment (development/production)
NODE_ENV=development

# Default Admin Credentials (only used when seeding in-memory database)
# Change these in production!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
